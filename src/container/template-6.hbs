        <header class="header">
            <div class="">
                {{> logo}}
            </div>


            <nav class="header_nav ">
                <div class=" header-nav-right">
                  
                  {{> nav list=header }}
                
                </div>
            </nav>
        </header>

      
   <main class="main">
          {{#with info}}
               <div class="info">
                    <h1 class="info_title">{{title}}</h1>
                    <h1 class="info_description">{{description}}</h1>
               </div>

          {{/with}}





         {{#with form}}
         <form class="form">
            <div class="form_input_list">
                {{#each inputs}}

                <input type="{{type}} "placeholder="{{placeholder}}" class="form_input" name="{{name}}" 
                     id="form-input-{{id}}" />
                {{/each}}
            </div>

            <div class="form_checkbox">
                 <input type="checkbox" name="{{checkbox.name}} id={{checkbox.name}}">
                 <div></div>
                 <label for="{{checkbox.name}}"> {{checkbox.label}}</label>

            </div>

            <button type="submit" class="form_button">{{button}}</button>
            <div class="form_line"></div>
            <p class="form_info">{{info}}</p>
         </form>
         {{/with}}

     </main>

    
    
     <div class="updates">
           {{#with updates}}
               <h1 class="updates_title">{{title}}</h1>
          
   
               {{#each list}}                       
                    <div class="list">

                       <strong class="list_nickname">{{nickname}}</strong>
                       <p class="list_description">{{description}}</p>

                   </div>
               {{/each}}


           {{#with show_all}}
             
                 <a href="https://example.com/updates" class="show_all">{{text}}</a>

           {{/with}}
    
    {{/with}}
    </div>


    <div class="expirience">
        
        {{#with expirience}}
           
             <strong class="expirience_title">{{title}}</strong>
           
                 <p class="expirience_badge">{{badge}}</p>

                {{#each list}}
                <div class="name">
                     <div class="list_name"> {{name}}</div>
                     <p class="details">{{details}}</p>
                </div>
                {{/each}}
          

            
        {{/with}}
   </div>
    
      

       <footer class=" footer">
           <div class="">
                {{> logo}}
                <span class="footer_copyright">Copyright 2023-2024</span>
           </div>

           {{#each footer}}
               <div class="">
                <span class="footer_title">{{title}}</span>

                {{> nav list=links isVertical=true}}
                
               </div>
           {{/each}}
       </footer>
